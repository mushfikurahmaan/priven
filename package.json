{
  "name": "priven",
  "productName": "Priven",
  "version": "1.1.26",
  "description": "TOTP Authenticator App built with Electron and Tailwind CSS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:css && electron .",
    "build:css": "npx tailwindcss -i ./renderer/styles.css -o ./renderer/output.css --watch",
    "dist": "electron-builder"
  },
  "author": "mushfikurahmaan",
  "authorUrl": "https://github.com/mushfikurahmaan",
  "license": "MIT",
  "keywords": [
    "electron",
    "tailwind",
    "authenticator",
    "totp"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "electron": "^29.4.6",
    "electron-packager": "^17.1.2",
    "electron-builder": "^24.14.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "googleapis": "^105.0.0",
    "open": "^10.1.2"
  },
  "build": {
    "appId": "com.priven.app",
    "productName": "Priven",
    "files": [
      "!vault.dat",
      "assets/**/*",
      "main.js",
      "models/**/*",
      "renderer/**/*",
      "services/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/logo.ico",
      "target": "nsis"
    }
  }
}
